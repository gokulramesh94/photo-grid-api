{
  "name": "photo-grid-api",
  "version": "1.0.0",
  "description": "Photo Grid's API",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=development nodemon --watch './**/*.ts' --exec ts-node src/index.ts dev",
    "start": "node dist/index.js",
    "postinstall": "tsc",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "deploy": "git add . && git commit -m Heroku && git push heroku main"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gokulramesh94/photo-grid-api.git"
  },
  "author": "Gokul",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gokulramesh94/photo-grid-api/issues"
  },
  "homepage": "https://github.com/gokulramesh94/photo-grid-api#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "nodemon": "^2.0.19",
    "pre-commit": "^1.2.2",
    "rimraf": "^4.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.5.0"
  },
  "engines": {
    "node": "18.6.0"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ]
}
